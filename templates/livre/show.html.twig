{% extends 'base.html.twig' %}

{% block title %}Livre
{% endblock %}

{% block body %}
	<h1 class="h3 mb-3 font-weight-normal">Livre</h1>


	<table class="table">
		<tbody>
			{% if  livre.id != null %}
				<tr>
					<th>Id</th>
					<td>{{ livre.id }}</td>
				</tr>
			{% endif %}
			{% if  livre.titre != null %}
				<tr>
					<th>Titre</th>
					<td>{{ livre.titre }}</td>
				</tr>
			{% endif %}
			{% if  livre.auteur != null %}
				<tr>
					<th>Auteur</th>
					<td>{{ livre.auteur }}</td>
				</tr>
			{% endif %}
			{% if  livre.categorie[0] != null %}
				<tr>
					<th>Categorie</th>
					<td>{{ livre.categorie[0]}}</td>
				</tr>
			{% endif %}
			{% if  livre.statut != null %}
				<tr>
					<th>Statut</th>
					<td>{{ livre.statut }}</td>
				</tr>
			{% endif %}

			<tr>
				<th>Date_emprunt</th>
				<td>{{ livre.dateEmprunt ? livre.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date_retour</th>
				<td>{{ livre.dateRetour ? livre.dateRetour|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</tbody>
</table>
<img class="card-img-top" src="{{asset('/uploads/images/'~livre.image)}}" alt="Card image cap" width="100">


<a class="btn btn-primary" href="{{ path('livre_index') }}">back to list</a>


<a class="btn btn-secondary" href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>


